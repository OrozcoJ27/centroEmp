@model Emprendedor

<h2>Crear Emprendedor</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="nombre">Nombre</label>
        <input type="text" class="form-control" id="nombre" name="nombre" value="@Model.nombre" required />
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" id="email" name="email" value="@Model.email" required />
    </div>
    <div class="form-group">
        <label for="telefono">Teléfono</label>
        <input type="text" class="form-control" id="telefono" name="telefono" value="@Model.telefono" />
    </div>
    <div class="form-group">
        <label for="nombre_proyecto">Nombre del Proyecto</label>
        <input type="text" class="form-control" id="nombre_proyecto" name="nombre_proyecto" value="@Model.nombre_proyecto" />
    </div>
    <div class="form-group">
        <label for="descripcion_proyecto">Descripción del Proyecto</label>
        <textarea class="form-control" id="descripcion_proyecto" name="descripcion_proyecto">@Model.descripcion_proyecto</textarea>
    </div>
    <div class="form-group">
        <label for="sector">Sector</label>
        <input type="text" class="form-control" id="sector" name="sector" value="@Model.sector" />
    </div>
    <div class="form-group">
        <label for="fecha_registro">Fecha de Registro</label>
        <input type="date" class="form-control" id="fecha_registro" name="fecha_registro" value="@Model.fecha_registro.ToString("yyyy-MM-dd")" />
    </div>
    <button type="submit" class="btn btn-primary">Crear</button>
</form>
